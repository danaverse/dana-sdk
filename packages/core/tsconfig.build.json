/** tsconfig for building the actual library */
{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "moduleResolution": "Bundler",
    "noEmit": false,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "./dist"
  },
  "include": ["./src/**/*"],
  "exclude": ["./**/*.test.ts"]
}
